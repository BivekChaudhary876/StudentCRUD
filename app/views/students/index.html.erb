<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<table >
  <thead style="color: green">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.address %></td>
        <td><button><%= link_to 'Display', student %></button></td>
        <td><button><%= link_to 'Edit', edit_student_path(student) %></button></td>
        <td><button><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to "New student", new_student_path %></button>
